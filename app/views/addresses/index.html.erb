<p id="notice"><%= notice %></p>

<h1>Listing Addresses</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Drivers license</th>
      <th>Date of birth</th>
      <th>Street number</th>
      <th>Street name</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Submitted on</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.first_name %></td>
        <td><%= address.middle_name %></td>
        <td><%= address.last_name %></td>
        <td><%= address.drivers_license %></td>
        <td><%= address.date_of_birth %></td>
        <td><%= address.street_number %></td>
        <td><%= address.street_name %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.zip_code %></td>
        <td><%= address.submitted_on %></td>
        <td><%= address.user_id %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

