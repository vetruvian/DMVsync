<div class="jumbotron">

<h1>Appointments</h1>
<br>
<br>

<table class ="table">
  <thead>
    <tr>
      <th>Reason</th>
      <th>Date/Time</th>
      <th>View Appointment</th>
      <th>Cancel Appointment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointment.each do |appointment| %>
      <tr>
        <td><%= appointment.reason %></td>
        <td><%= appointment.appt %></td>
        <td><%= link_to 'view', appointment %></td>
        <td><%= link_to 'cancel', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user %> 
<a class="btn btn-primary btn-lg" role="button" <%= link_to 'schedule new appointment', new_appointment_path %>
<% end %>

</div>