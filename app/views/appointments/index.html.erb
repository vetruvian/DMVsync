

<h1>Appointments</h1>

<table class ="table">
  <thead>
    <tr>
      <th>Reason</th>
      <th>Date/Time</th>
      <th>View Appointment</th>
      <th>Cancel Appointment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.reason %></td>
        <td><%= appointment.slot %></td>
        <td><%= link_to 'view', appointment %></td>
        <td><%= link_to 'cancel', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user %>
<%= link_to 'New Appointment', new_appointment_path %>
<% end %>